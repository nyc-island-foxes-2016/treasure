<h3>Do you likey?</h3>

<% if @item %>
  <%= render @item %>

  <%= form_for @swipe do |f| %>
    <%= f.hidden_field :direction, :value => "L" %>
    <%= f.hidden_field :other_item_id, :value => @item.id %>
    <%= f.submit "Swipe left" %>
  <% end %>

  <%= form_for @swipe do |f| %>
    <%= f.hidden_field :direction, :value => "R" %>
    <%= f.hidden_field :other_item_id, :value => @item.id %>
    <%= f.submit "Swipe right" %>
  <% end %>

<% else %>

  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>

<% end %>
